{
  "name": "docketeer",
  "version": "6.0.0",
  "license": "MIT",
  "description": "A Docker Visualizer",
  "author": "Team Docketeer",
  "proxy": "http://localhost:3000",
  "main": "./dist/Docketeer.js",
  "scripts": {
    "electron": "electron .",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
    "dist": "npm run compile && electron-builder",
    "dist-win": "npm run compile && electron-builder --win --x64",
    "dist:dir": "yarn dist  --dir -c.compression=store -c.mac.identity=null",
    "temp": "webpack-dev-server --open --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage && open ./coverage/lcov-report/index.html",
    "lint": "eslint --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {},
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oslabs-beta/docketeer.git"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "build": {
    "extraResources": [
      {
        "from": "./src/database/",
        "to": "database",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}